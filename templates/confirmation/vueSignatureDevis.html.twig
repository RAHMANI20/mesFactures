
<!-- Modal HTML -->
<div id="signature" class="modal fade my-auto">
    <div class="modal-dialog modal-confirm ">
        <div class="modal-content">
            <div class="modal-body ">
                <h3>Sélectionner la date de signature (D{{ quotation.numerotation }})</h3>
                <form action="{{ path('signer_devis',{'id':quotation.id}) }}" method="post">
                    <div><input name="signed_date" class="form-control my-5" type="date" value="{{ "now"|date("Y-m-d") }}"></div>
                    <div class="modal-footer justify-content-center">
                        <button class="btn btn-danger" data-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-success">Marquer comme signé</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>