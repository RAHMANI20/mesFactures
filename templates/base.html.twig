<!DOCTYPE html>
<html>
    <head>
        {#        delete message#}
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>



        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="{{ asset('css/style.css') }}" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

{#        <script type="text/javascript" src="{{ asset('js/app.js') }}"></script>#}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        <script src="https://kit.fontawesome.com/3de4011b76.js" crossorigin="anonymous"></script>
    </head>
    <body>
         {#        menu     #}
        <header class="navbar navbar-light sticky-top  shadow mb-5" style="background-color:{% block menuColor %}#3f038f{% endblock %}">

            {% if app.user %}
                {% block menuTitle %}<a style="color: white" class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="{{ path('dashboard') }}"> {{ app.user.prenom }} </a>{% endblock%}
                <button class="navbar-toggler  d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            {% else %}
                <a  style="color: white" class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="{{ path('main') }}">Mes Factures</a>
                <div class="navbar-nav ms-auto">
                    <div class="nav-item text-nowrap">
                        <a style="color: white" class="nav-link px-3" href="{{ path('app_register') }}">Inscription</a>
                    </div>
                </div>
                <div class="navbar-nav ms-0">
                    <div class="nav-item text-nowrap">
                        <a style="color: white" class="nav-link px-3" href="{{ path('app_login') }}">Connexion</a>
                    </div>
                </div>
            {% endif %}

        </header>
       {#         body       #}
       <div class="container">
        {% block body %}{% endblock %}
       </div>
    </body>
</html>
